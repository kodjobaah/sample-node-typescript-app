{
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "outDir": "./dist",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "./src",
        "noEmit": false, 
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test/**/*.ts"
]
}