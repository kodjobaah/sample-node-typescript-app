{
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "outDir": "dist",
        "sourceRoot": "src/",
        "sourceMap": true,
        "baseUrl": "./src",
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test/**/*.ts"
]
}